<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textOn="브레이크 On"
            android:textOff="브레이크 Off"
            app:checkedColor="#333"
            app:uncheckedColor="#444"
            app:radius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/breakTB"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/lightTB"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textOn="조명 On"
            android:textOff="조명 Off"
            app:checkedColor="#333"
            app:uncheckedColor="#444"
            app:radius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/lightTB"
            app:layout_constraintTop_toBottomOf="@+id/ledTB"
            app:layout_constraintBottom_toTopOf="@+id/breakTB"/>

    <me.rishabhkhanna.customtogglebutton.CustomToggleButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textOn="자동 조명 On"
            android:textOff="자동 조명 Off"
            app:checkedColor="#333"
            app:uncheckedColor="#444"
            app:radius="12dp"
            android:id="@+id/ledTB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lightTB"/>
</android.support.constraint.ConstraintLayout>